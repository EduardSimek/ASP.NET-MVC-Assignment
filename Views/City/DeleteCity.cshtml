@model Zadanie_.Models.City2

@{
    ViewData["Title"] = "AddLead";
}

<hr />
<div class="container">
    <div class="col-md-10 border-1">

        <form asp-action="DeleteCityDetails">
            <input asp-for="CityIdentificator" hidden />

            <h2>Delete City Details</h2>
            <hr />

            <div class="row">
                <div class="col-3">
                    <label asp-for="CityName" class="control-label"></label>
                    <input asp-for="CityName" class="form-control" readonly />
                </div>

                <div class="col-3">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" readonly />
                </div>
            </div>

            <div class="row">
                <div class="col-3">
                    <label asp-for="_Coordinates.Latitude" class="control-label"></label>
                    <input asp-for="_Coordinates.Latitude" class="form-control" readonly />
                </div>

                <div class="col-3">
                    <label asp-for="_Coordinates.Longitude" class="control-label"></label>
                    <input asp-for="_Coordinates.Longitude" class="form-control" readonly />
                </div>
            </div>

                <div class="row">
                    <div class="col-3">
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger" />
                        <a asp-action="Index" asp-controller="City" class="btn btn-warning">Back to The Cities Page</a>
                    </div>
                </div>


        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
